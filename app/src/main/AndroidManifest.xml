<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS"/>


    <application
        android:allowBackup="false"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Cinemeteor">
        <activity
            android:name=".FilmActivity"
            android:exported="false"
            android:label="@string/title_activity_film"
            android:theme="@style/Theme.Cinemeteor" />
        <activity
            android:name=".FavouriteActivity"
            android:exported="false"
            android:label="@string/title_activity_favorite"
            android:theme="@style/Theme.Cinemeteor" />
        <activity
            android:name=".AboutActivity"
            android:exported="true"
            android:label="activity about"
            android:theme="@style/Theme.Cinemeteor" />
        <activity
            android:name=".ProfileActivity"
            android:exported="true"
            android:label="activity profile"
            android:theme="@style/Theme.Cinemeteor" />
        <activity
            android:name=".LoginActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.Cinemeteor"/>
        <activity
            android:name=".SignupActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.Cinemeteor" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.Cinemeteor" />
        <activity
            android:name=".EditProfileActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.Cinemeteor" />
        <activity
            android:name=".CreateAccountActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.Cinemeteor" />
        <activity
            android:name=".Notification.NotificationsActivity"
            android:exported="true"
            android:label="Notifications"
            android:theme="@style/Theme.Cinemeteor" />
        <activity
            android:name=".SplashScreen"
            android:exported="true"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <service
            android:name=".Notification.MyFirebaseMessagingService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
    </application>
</manifest>